<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.name %>:</strong>
          <%= comment.comment %>
        </p>
      </div>
    </div>
      <div class="level-right">
        <p class="level-item">
          <%= link_to 'Delete', [comment.post, comment],
                  method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %>
         </p>         
        <p class="level-item">
          <%= link_to "Upvote", like_post_path(@post), class:"button", method: :get %>
        </p>
        <p class="level-item">
          <%= link_to "Downvote", dislike_post_path(@post), class:"button", method: :get %>
        </p>
      </div>
  </article>

</div>