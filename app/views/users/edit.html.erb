<h1>Editing User</h1>
<%= form_for(@user) do |f| %>

<p><div class = "field">
    <%= f.label :name %>
    <%= f.text_field :name %>
</div></p>

<p><div class = "field">
    <%= f.label :email %>
    <%= f.text_field :email %>
</div></p>

<p><div class = "field">
    <%= f.label :password %>
    <%= f.password_field :password %>
</div></p>

<p><div class="actions"><%= f.submit %></div></p>

<%= link_to 'Log Out', logout_path %>

<% end %>
