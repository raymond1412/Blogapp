<!DOCTYPE html>
<html>
  <head>
    <title>DemoBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="hero is-primary is-medium">
    <!-- Hero head: will stick at the top -->
    <div class="hero-head">
      <nav class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to 'Blog App', root_path, class: "navbar-item" %>
            <span class="navbar-burger burger" data-target="navbarMenuHeroA">
              <span></span>
              <span></span>
              <span></span>
            </span>
            </div>
               <div id="navbarMenuHeroA" class="navbar-menu">
               <div class="navbar-end">
               <%= link_to "Create New Post", new_post_path, class:"navbar-item" %>
              <div id="navbarMenuHeroA" class="navbar-menu">
               <div class="navbar-end">
                <a class="navbar-item">
                 <%= link_to "Sign Up", new_user_path, class:"navbar-item" %>
                </a>
                <a class="navbar-item">
                  <% if session[:user_id] %>
                    <%= link_to 'Log Out', logout_path, class:"navbar-item"%>
                  <% else %>
                    <%= link_to 'Log In', login_path, class:"navbar-item"%>
                  <% end %>
                </a> 
              </div>
             </div>
            </div>
          </div>
        </div>
      </nav>
    </div>



    <!-- Hero content: will be in the middle -->
    <div class="hero-body">
      <div class="container has-text-centered">
        <h1 class="title">
          <%= yield :page_title %>
        </h1>
      </div>
    </div>
  </section>
    <%= yield %>
  </body>
</html>